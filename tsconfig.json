{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/projects/*": [
        "./app/(tabs)/projects/*"
      ],
      "@/projectsApi/*": [
        "./app/(tabs)/projects/api/*"
      ],
      "@/tasks/*": [
        "./app/(tabs)/projects/[projectId]/tasks/*"
      ],
      "@/tasksApi/*": [
        "./app/(tabs)/projects/[projectId]/tasks/api/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}